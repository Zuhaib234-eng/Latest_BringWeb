@model Bring.Models.Product

@{
    ViewBag.Title = "ProductUpload";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="row">
    <div class="col-xs-12">

        <section class="panel form-wizard" id="w4">
            <header class="panel-heading">


                <h2 class="panel-title">Product Upload</h2>
            </header>
            @using (Html.BeginForm("ProductUpload", "Vendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="panel-body">
                    <div class="wizard-progress wizard-progress-lg">
                        <div class="steps-progress">
                            <div class="progress-indicator"></div>
                        </div>
                        <ul class="wizard-steps">
                            <li class="active">
                                <a href="#w4-account" data-toggle="tab"><span>1</span>Product Info</a>
                            </li>
                            <li>
                                <a href="#w4-billing" data-toggle="tab"><span>2</span>Image</a>
                            </li>
                            <li>
                                <a href="#w4-confirm" data-toggle="tab"><span>3</span>Confirmation</a>
                            </li>
                        </ul>
                    </div>

                    <form class="form-horizontal" novalidate="novalidate">
                        <div class="tab-content">
                            <div id="w4-account" class="tab-pane active">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-right" for="w4-username" style="font-size:15px;">Name</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(mod => mod.ProductName, new { @class = "form-control" })
                                        @*<input type="text" class="form-control" name="username" id="w4-username" required>*@
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-right" for="w4-username" style="font-size:15px;">Category</label>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(x => x.CategoryName, new List<SelectListItem>
                                      {
                                            new SelectListItem() {Text = "Chips & Snacks", Value="ChipsAndSnacks"},
                                            new SelectListItem() {Text = "Butchery & BBQ", Value="ButcheryAndBBQ"},
                                            new SelectListItem() {Text = "Chocolate & Candies", Value="ChocolateAndCandies"},
                                            new SelectListItem() {Text = "Ice Creams", Value="IceCreams"},
                                            new SelectListItem() {Text = "Tea & Coffee", Value="TeaAndCoffee"},
                                            new SelectListItem() {Text = "Milk & Dairy Items", Value="MilkAndDairyItems"},
                                            new SelectListItem() {Text = "Oils,Vinegar & More", Value="OilsVinegarAndMore"},
                                            new SelectListItem() {Text = "Soft Drinks & Juices", Value="SoftDrinksAndJuices"},
                                            new SelectListItem() {Text = "Rice,Flour & More", Value="RiceFlourAndMore"},
                                            new SelectListItem() {Text = "Cheese & Spreads", Value="CheeseAndSpreads"},
                                            new SelectListItem() {Text = "Fresh Fruits", Value="FreshFruits"},
                                            new SelectListItem() {Text = "Fresh Vegetables", Value="FreshVegetables"},
                                            new SelectListItem() {Text = "Cakes & Desserts", Value="CakesAndDesserts"},
                                            new SelectListItem() {Text = "Cookies", Value="Cookies"},
                                            new SelectListItem() {Text = "Meat & Fish", Value="MeatAndFish"},
                                            new SelectListItem() {Text = "Vegan & Vegetarian", Value="VeganAndVegetarian"},
                                            new SelectListItem() {Text = "Snacks & Sweets", Value="SnacksAndSweets"},
                                            new SelectListItem() {Text = "Cereal & Packets", Value="CerealAndPackets"},
                                            new SelectListItem() {Text = "Pasta, Rice & Grain", Value="PastaRiceAndGrain"},
                                            new SelectListItem() {Text = "Nuts and Seeds", Value="NutsAndSeeds"},
                                            new SelectListItem() {Text = "Shampoo & Soap", Value="ShampooAndSoap"},
                                            new SelectListItem() {Text = "Mascaras & Eyebrows", Value="MascarasAndEyebrows"},
                                            new SelectListItem() {Text = "Eye Liners", Value="EyeLiners"},
                                            new SelectListItem() {Text = "MakeUp Palette", Value="MakeUpPalette"},
                                            new SelectListItem() {Text = "MakeUp Kits", Value="MakeUpKits"},
                                            new SelectListItem() {Text = "Concealers & Foundations", Value="ConcealersAndFoundations"},
                                            new SelectListItem() {Text = "Setting Sprays & Powders", Value="SettingSpraysAndPowders"},
                                            new SelectListItem() {Text = "Blushes & Bronzers", Value="BlushesAndBronzers"},
                                            new SelectListItem() {Text = "Bases & Primers", Value="BasesAndPrimers"},
                                            new SelectListItem() {Text = "Eye Shadows", Value="EyeShadows"},
                                            new SelectListItem() {Text = "Highlights & Contours", Value="HighlightsAndContours"},
                                            new SelectListItem() {Text = "Facial Care", Value="FacialCare"},
                                            new SelectListItem() {Text = "MakeUp Removers", Value="MakeUpRemovers"},
                                            new SelectListItem() {Text = "Nails", Value="Nails"},
                                            new SelectListItem() {Text = "Nails Extension", Value="NailsExtension"},
                                            new SelectListItem() {Text = "Frozen Foods", Value="FrozenFoods"},
                                            new SelectListItem() {Text = "Prepaid Cards", Value="PrepaidCards"},
                                            new SelectListItem() {Text = "Tobacco", Value="Tobacco"},
                                            new SelectListItem() {Text = "Water", Value="Water"},

                                      },
                                   new { @class = "form-control" }
                                   )
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-right" for="w4-first-name" style="font-size:15px;">Description</label>
                                    <div class="col-sm-7">
                                        @Html.TextAreaFor(mod => mod.Description, new { @class = "form-control" })
                                        @*<input type="text" class="form-control" name="something" id="w4-first-name" required>*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-right" for="w4-first-name" style="font-size:15px;">Price</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(mod => mod.Price, new { @class = "form-control" })
                                        @*<input type="text" class="form-control" name="something" id="w4-first-name">*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-right" for="w4-first-name" style="font-size:15px;">Phone No</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(mod => mod.PhoneNo, new { @class = "form-control" })
                                        @*<input type="text" class="form-control" name="first-name" id="w4-first-name" required>*@
                                    </div>
                                </div>

                            </div>


                            <div id="w4-billing" class="tab-pane">
                                <div class="box" style="margin-left: 80px;">
                                    <br>
                                    <br>
                                    <div class="container" style="margin-left:-70px;">
                                        <div class="row text-center">
                                            <div class="col-md-4">
                                                <div class="text-center">
                                                    <img id="preview" style="width: 200px;height: 200px;">
                                                    <br>
                                                    <br>
                                                    <input style="text-align: center;margin-left: 50px;" type="file" name="file" id="file" accept="image/*" onchange="previewImage();">

                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="text-center">

                                                    <img id="preview2" style="width: 200px;height: 200px;">
                                                    <br>
                                                    <br>
                                                    <input style="text-align: center;margin-left: 50px;" type="file" name="file2" id="file2" accept="image/*" onchange="previewImage2();">
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="text-center">
                                                    <img id="preview3" style="width: 200px;height: 200px;">
                                                    <br>
                                                    <br>
                                                    <input style="text-align: center;margin-left: 50px;" type="file" name="file3" id="file3" accept="image/*" onchange="previewImage3();">
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>








                            <div id="w4-confirm" class="tab-pane">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-right" for="w4-email" style="font-size:15px;">Email</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(mod => mod.Email, new { @class = "form-control" })
                                        @*<input type="text" class="form-control" name="email" id="w4-email" required>*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label text-right" for="w4-email" style="font-size:15px;">Stock</label>
                                    <div class="col-sm-7">
                                        @Html.TextBoxFor(mod => mod.ProductStock, new { @class = "form-control" })
                                        @*<input type="text" class="form-control" name="email" id="w4-email" required>*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9">
                                        <div class="checkbox-custom">
                                            <input type="checkbox" name="terms" id="w4-terms" required>
                                            <label for="w4-terms" style="font-size:15px;">I agree to the terms of service</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-9 finish pull-right">
                                        <input type="submit" style="width:50px" value="Finish" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="panel-footer">
                    <ul class="pager">
                        <li class="previous disabled">
                            <a style="font-size:15px;"><i class="fa fa-angle-left" style="font-size:15px;"></i> Previous</a>
                        </li>

                        <li class="next">
                            <a style="font-size:15px;">Next <i class="fa fa-angle-right" style="font-size:15px;"></i></a>
                        </li>
                    </ul>
                </div>
            }
        </section>

    </div>
</div>
<div class="successmsg" style="display:none;">
    @ViewBag.msg
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/Content/PopUp/notiflix-aio-2.7.0.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '/Vendor/SetSuccessEmpty',
            contentType: "application/json; charset=utf-8",
            success: function (r) {
            }
        });
        var msg = $(".successmsg").text().trim();
        if (msg == 'success') {
            Notiflix.Report.Success();
            $(".notiflix-report-title").text("Product uploaded");
            $(".notiflix-report-message").text("");
            $(".notiflix-report-overlay").css({ "background": "rgba(255,255,255, 0.7)", "animation-duration": "360ms;" });
            $("#NXReportButton").hide();
            mytimer();            
        }

        var timeleft = 1;
        function mytimer() {
            var downloadTimer = setInterval(function () {
                if (timeleft <= 0) {
                    clearInterval(downloadTimer);
                    $("#NotiflixReportWrap").fadeOut();
                    
                } else {
                    
                }
                timeleft -= 1;
            }, 1000);
        }
    });
</script>





