@model Bring.Models.VendorModel
@{
    Layout = null;
}

<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Template2/HTML/assets/vendor/bootstrap/css/bootstrap.css" />

    <link rel="stylesheet" href="~/Template2/HTML/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Template2/HTML/assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Template2/HTML/assets/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Template2/HTML/assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Template2/HTML/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Template2/HTML/assets/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/Template2/HTML/assets/vendor/modernizr/modernizr.js"></script>

</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="~/Images/Bring logo-01.png" height="54" alt="Bring" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Registration </h2>
                </div>
                <div class="panel-body" style="width: 800px;">
                    @using (Html.BeginForm("Index", "VendorSignUp", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-lg">
                                    <label>Name</label>
                                    @Html.TextBoxFor(mod => mod.Name, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "Name*" })
                                    @*<input name="name" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="Name*" />*@
                                </div>

                                <div class="form-group mb-lg">
                                    <label>Last name</label>
                                    @Html.TextBoxFor(mod => mod.LastName, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "Last Name*" })
                                    @*<input name="last-name" type="text" class="form-control input-lg" style="height: 40px; width: 300px;font-size: 12px;" placeholder="Last name*" />*@
                                </div>

                                <div class="form-group mb-lg">
                                    <label>Email</label>
                                    @Html.TextBoxFor(mod => mod.Email, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "Email*" })
                                    @*<input name="Email" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="Email*" />*@
                                </div>

                                <div class="form-group mb-lg">
                                    <label>Password</label>
                                    @Html.TextBoxFor(mod => mod.Password, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "Password*", @type = "password" })
                                    @*<input name="password" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="password*" />*@
                                </div>
                                <div class="form-group mb-lg">
                                    <label>Password</label>
                                    @Html.TextBoxFor(mod => mod.PhoneNo, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "+923333333333" })
                                    @*<input name="password" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="password*" />*@
                                </div>


                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-lg">
                                    <label>Country</label>
                                    @Html.TextBoxFor(mod => mod.Country, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "Country*" })
                                    @*<input name="text" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="Country*" />*@
                                </div>

                                <div class="form-group mb-lg">
                                    <label>City</label>
                                    @Html.TextBoxFor(mod => mod.City, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "City*" })
                                    @*<input name="text" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="City*" />*@
                                </div>

                                <div class="form-group mb-lg">
                                    <label>CNIC</label>
                                    @Html.TextBoxFor(mod => mod.Cnic, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "CNIC*" })
                                    @*<input name="text" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="CNIC*" />*@
                                </div>

                                <div class="form-group mb-lg">
                                    <label>Address</label>
                                    @Html.TextBoxFor(mod => mod.Address, new { @class = "form-control input-lg", @style = "height: 40px;width: 300px;font-size: 12px;", @placeholder = "Address*" })
                                    @*<input name="text" type="text" class="form-control input-lg" style="height: 40px;width: 300px;font-size: 12px;" placeholder="Address*" />*@
                                </div>


                            </div>
                        </div>
                        <!-- <div class="form-group mb-none">
                            <div class="row">
                                <div class="col-sm-6 mb-lg">
                                    <label>Password</label>
                                    <input name="pwd" type="password" class="form-control input-lg" />
                                </div>
                                <div class="col-sm-6 mb-lg">
                                    <label>Password Confirmation</label>
                                    <input name="pwd_confirm" type="password" class="form-control input-lg" />
                                </div>
                            </div>
                        </div> -->

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="checkbox-custom checkbox-default">
                                    <input id="AgreeTerms" name="agreeterms" type="checkbox" />
                                    <label for="AgreeTerms">I agree with <a href="#">terms of use</a></label>
                                </div>
                            </div>
                            <!-- <div class="col-sm-4 text-right">
                                <button type="submit" class="btn btn-primary hidden-xs">Sign Up</button>
                                <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign Up</button>
                            </div> -->
                        </div>
                        <br>
                        <!-- <div class="col-sm-12 text-center ">
                                <button type="submit" class="btn btn-primary hidden-xs">Sign Up</button>
                                <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign Up</button>
                            </div> -->
                        <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                            <span>
                                <input type="submit" class="btn btn-primary hidden-xs" value="Sign Up" />
                                <input type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg" value="Sign Up" />
                            </span>
                        </span>

                        <!-- <div class="mb-xs text-center">
                            <a class="btn btn-facebook mb-md ml-xs mr-xs">Connect with <i class="fa fa-facebook"></i></a>
                            <a class="btn btn-twitter mb-md ml-xs mr-xs">Connect with <i class="fa fa-twitter"></i></a>
                        </div> -->
                        <!-- <p class="text-center">Already have an account? <a href="pages-signin.html">Sign In!</a></p> -->

                    }
                </div>
            </div>

            <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2016. All Rights Reserved.</p>
        </div>
    </section>

    <div class="successmsg" style="display:none;">
        @ViewBag.msg
    </div>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/Template2/HTML/assets/vendor/jquery/jquery.js"></script>
    <script src="~/Template2/HTML/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Template2/HTML/assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Template2/HTML/assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Template2/HTML/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Template2/HTML/assets/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="~/Template2/HTML/assets/vendor/jquery-placeholder/jquery-placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Template2/HTML/assets/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/Template2/HTML/assets/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Template2/HTML/assets/javascripts/theme.init.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Content/PopUp/notiflix-aio-2.7.0.min.js"></script>
    <script>
        var msg = $(".successmsg").text().trim();
        console.log(msg);
        if (msg == 'success') {
            Notiflix.Report.Success();
            $(".notiflix-report-title").text("Thankyou for Registration");
            $(".notiflix-report-message").text("");
            $(".notiflix-report-overlay").css({ "background": "rgba(255,255,255, 0.7)", "animation-duration": "360ms;" });
            $("#NXReportButton").hide();
            mytimer();
        }
        else if (msg == 'already exist'){
            Notiflix.Report.Failure();
            $(".notiflix-report-title").text("Account already exist");
            $(".notiflix-report-message").text("");
            $(".notiflix-report-overlay").css({ "background": "rgba(255,255,255, 0.7)", "animation-duration": "360ms;" });

        }

        var timeleft = 1;
        function mytimer() {
            var downloadTimer = setInterval(function () {
                if (timeleft <= 0) {
                    clearInterval(downloadTimer);
                    $("#NotiflixReportWrap").fadeOut();

                } else {

                }
                timeleft -= 1;
            }, 1000);
        }
    </script>
</body>
</html>
